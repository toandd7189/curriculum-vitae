<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Testimonials Style 1</title>
	<sampledata></sampledata>
	<fields name="testimonials">
		<fieldset name="basic" label="TESTIMONIAL_BASIC_LABEL" description="TESTIMONIAL_BASIC_DESC">
			<field name="acm-title" type="text" label="ACM_TITLE_LABEL" description="ACM_TITLE_DESC" />

			<field name="author-info-color" type="text" size="10" default="" label="TESTIMONIAL_AUTHORINFOCOLOR_LABEL" description="TESTIMONIAL_AUTHORINFOCOLOR_DESC"></field>
		</fieldset>

		<fieldset name="testimonial-box" label="TESTIMONIALS_BOX_LABEL" description="TESTIMONIALS_BOX_DESC">	  
			<field name="data-special" type="jalist">
				<item name="testimonial-text" type="textarea" cols="40" rows="5" default="" label="TESTIMONIAL_TEXT_LABEL" description="TESTIMONIAL_TEXT_DESC" />
				<item name="author-name" type="text" size="50" default="" label="TESTIMONIAL_NAME_LABEL" description="TESTIMONIAL_NAME_DESC" />
				<item name="author-title" type="text" size="50" default="" label="TESTIMONIAL_TITLE_LABEL" description="TESTIMONIAL_TITLE_DESC"  />
				<item name="author-img" type="media" default="" label="TESTIMONIAL_IMG_LABEL" description="TESTIMONIAL_IMG_DESC" />
			</field>
		</fieldset>
	</fields>
</form>