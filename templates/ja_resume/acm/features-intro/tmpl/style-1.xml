				<field name="title" type="text" 
					description="FEATURES_TITLE_DES"
					label="FEATURES_TITLE"
					default=""
					/>

					<field name="title-time" type="text" 
					description="FEATURES_TITLE_TIME_DES"
					label="FEATURES_TITLE_TIME"
					default=""
					/>

					<field name="title-speed" type="text" 
					description="FEATURES_TITLE_SPEED_DES"
					label="FEATURES_TITLE_SPEED"
					default=""
					/>

				<field name="position" type="text" 
				description="FEATURES_POSITION_DES"
				label="FEATURES_POSITION"
				default=""
				/>

				<field name="position-time" type="text" 
				description="FEATURES_POSITION_TIME_DES"
				label="FEATURES_POSITION_TIME"
				default=""
				/>

				<field name="position-speed" type="text" 
				description="FEATURES_POSITION_SPEED_DES"
				label="FEATURES_POSITION_SPEED"
				default=""
				/>

				<field name="des" type="text" 
				description="FEATURES_DESCRIPTIONS_DES"
				label="FEATURES_DESCRIPTIONS_TITLE"
				default=""
				/>

				<field name="des-time" type="text" 
				description="FEATURES_DESCRIPTIONS_TIME_DES"
				label="FEATURES_DESCRIPTIONS_TIME_TITLE"
				default=""
				/>

				<field name="des-speed" type="text" 
				description="FEATURES_DESCRIPTIONS_SPEED_DES"
				label="FEATURES_DESCRIPTIONS_SPEED_TITLE"
				default=""
				/>

				<field name="horizontal-position" type="list" description="HORIZONTAL_POSITION_DES" label="HORIZONTAL_POSITION" default="right">
					<option value="left">Left</option>
					<option value="center">Center</option>
					<option value="right">Right</option>
				</field>

				<field name="vertical-position" type="list" description="VERTICAL_POSITION_DES" label="VERTICAL_POSITION" default="bottom">
					<option value="top">Top</option>
					<option value="center">Center</option>
					<option value="bottom">Bottom</option>
				</field>

				<field name="image" type="media" 
					description="FEATURES_IMG_DES"
					label="FEATURES_IMG_TITLE"
					default=""
					/>		
		</fieldset>
